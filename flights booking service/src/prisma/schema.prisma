generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

model Bookings{
  id Int @id @default(autoincrement())
  flightId Int
  userId Int
  status BookingStatus @default(INITIATED)
  noOfSeats Int @default(1)
  totalCost Int
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

enum BookingStatus{
  BOOKED
  CANCELLED
  INITIATED
  PENDING
}

